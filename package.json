{
  "name": "root",
  "private": true,
  "scripts": {
    "test": "jest",
    "lint": "eslint . --fix",
    "prepush": "npm run test",
    "commitmsg": "commitlint -E GIT_PARAMS",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "eslint": "^5.4.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "lerna": "^3.1.2",
    "lint-staged": "^7.2.2"
  },
  "eslintConfig": {
    "extends": "standard",
    "env": {
      "jest": true
    },
    "rules": {
      "padded-blocks": "off",
      "comma-dangle": [
        "error",
        "always-multiline"
      ]
    }
  },
  "eslintIgnore": [
    "node_modules"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
